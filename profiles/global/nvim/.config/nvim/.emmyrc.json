{
  "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
  "diagnostics": { "globals": ["vim"] },
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": ["lua/?.lua", "lua/?/init.lua"]
  },
  "workspace": {
    "enableReindex": false,
    "library": [
      "$VIMRUNTIME",
      "${3rd}/luv/library",
      "${3rd}/busted/library",

      "$HOME/.local/share/nvim/lazy/lazy.nvim/",
      "$HOME/.local/share/nvim/lazy/blink.cmp/",
      "$HOME/.local/share/nvim/lazy/snacks.nvim/",
      "$HOME/.local/share/nvim/lazy/lspsaga.nvim/",
      "$HOME/.local/share/nvim/lazy/nvim-treesitter/",
      "$HOME/.local/share/nvim/lazy/markview.nvim/",
      "$HOME/.local/share/nvim/lazy/guard.nvim/",
      "$HOME/.local/share/nvim/lazy/opencode.nvim/"
    ]
  }
}
